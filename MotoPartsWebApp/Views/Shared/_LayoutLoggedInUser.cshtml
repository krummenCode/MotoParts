@using MotoPartsWebApp.Models;
@{
    LoginModel u = (LoginModel)Session["loginModel"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MotoParts - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MotoParts", "Landing", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Landing", "Home")</li>
                    <li>@Html.ActionLink("Parts", "ViewAllParts", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @*<li><a href="/home/ViewCart"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>*@
                    <li><a href="/home/UserProfile"><span class="glyphicon glyphicon-user"></span> @u.FirstName </a></li>
                    <li><a href="@Url.Action("ViewCart", "Home", new {iUserID = u.UserID })"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                    <li><a href="/home/Signout"><span class="glyphicon glyphicon-log-out"></span> Sign Out</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MotoParts</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
